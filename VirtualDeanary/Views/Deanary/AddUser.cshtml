@model VirtualDeanary.Models.AddUserViewModel
@{
    ViewData["Title"] = "AddUser";
}

<div class="container">
    <h3>Add User</h3>
    <form asp-action="AddUser" asp-controller="deanary" method="post">

        <div class="form-group col-md-6">
            <input type="text" asp-for="Email" class="form-control" placeholder="Email" required />
        </div>
        <div class="form-group col-md-6">
            <input type="text" asp-for="Name" class="form-control" placeholder="Name" required />
        </div>
        <div class="form-group col-md-6">
            <input type="text" asp-for="Lastname" class="form-control" placeholder="Surename" required />
        </div>
        <div class="form-group col-md-6">
            <input type="number" asp-for="Year" class="form-control" placeholder="Year of birth" required />
        </div>
        <div class="form-check">
            <input asp-for="Teacher" class="form-check-input" type="checkbox" value="true" id="defaultCheck1">
            <label asp-for="Teacher" class="form-check-label" for="defaultCheck1">
                Is this a teacher?
            </label>
        </div>
        <div class="form-group col-md-6">
            <input type="password" asp-for="Password" class="form-control" placeholder="Password" required />
        </div>
        <div class="form-group col-md-6">
            <input type="submit" value="Add" class="btn btn-success" />
        </div>
    </form>
</div>


