@model VirtualDeanary.Models.AddCourseViewModel

@{
    ViewData["Title"] = "AddCourse";

}


<div class="container">
    <h1 class="display-4">Add Course</h1>
    <form asp-action="AddCourse" asp-controller="deanary" method="post">
        <div class="form-groupe col-md-6">
            <label asp-for="Name" class="control-label">Name of course</label>
            <input asp-for="Name" class="form-control" type="text" required />
        </div>

        <div class="form-groupe col-md-6">
            <input value="Add" type="submit" class="btn btn-success"/>
        </div>
    </form>
</div>

