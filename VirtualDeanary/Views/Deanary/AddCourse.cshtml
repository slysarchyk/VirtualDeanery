@using VirtualDeanary.Data
@using Microsoft.EntityFrameworkCore
@model VirtualDeanary.Models.AddCourseViewModel
@inject SqlContext _db
@{
    ViewData["Title"] = "AddCourse";

    var teacher = await _db.Users.Where(x => x.Teacher == true).ToListAsync();
    var teacherSelectList = teacher.Select(x => new SelectListItem(x.Lastname, x.Id.ToString()));

    var semester = await _db.Semesters.ToListAsync();
    var semSelectList = semester.Select(x => new SelectListItem(x.SemesterName, x.Id.ToString()));

}


<div class="container">
    <h3>Add Course</h3>
    <form asp-action="AddCourse" asp-controller="deanary" method="post">
        <div class="form-group col-md-6">
            <label asp-for="CourseName" class="control-label">Name of course</label>
            <input asp-for="CourseName" class="form-control" type="text" required />
        </div>

        <div class="form-group col-md-6">
            <label asp-for="SemesterId" class="control-label">Semester</label>
            <select asp-for="SemesterId" class="form-control" asp-items="semSelectList">
                <option></option>
            </select>
        </div>

        <div class="form-group col-md-6">
            <label asp-for="UserId" class="control-label">Teacher</label>
            <select asp-for="UserId" class="form-control" asp-items="@teacherSelectList">
                <option></option>
            </select>
        </div> 

        <div class="form-group col-md-6">
            <input value="Add" type="submit" class="btn btn-success"/>
        </div>
    </form>
</div>

