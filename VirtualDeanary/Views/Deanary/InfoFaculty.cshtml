@model VirtualDeanary.Models.InfoFacultyViewModel
@{
    ViewData["Title"] = "InfoFaculty";
}

    <div class="container">
        <p><h4>Semesters list</h4></p>

        <div class="row">
            @foreach (var item in Model.Semesters)
            {
                    <div class="col-md-3">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-header">
                                <h4 class="my-0 font-weight-normal">@item.Period @item.Year</h4>
                            </div>
                            <div class="card-body">
                                <ul class="list-unstyled mt-3 mb-4">
                                    <li>Faculty - <strong class="text-success">@item.Faculty.FacultyName</strong></li>
                                    <li>Study Year - <strong class="text-success">@item.StudyYear</strong></li>
                                    <li>Degree - <strong class="text-success">@item.Degree</strong></li>
                                </ul>
                                <a type="button" class="btn btn-outline-info"
                                   asp-action="InfoSemester"
                                   asp-controller="Deanary"
                                   asp-route-id="@item.Id">
                                    Info
                                </a>
                            </div>
                        </div>
                    </div>
            }
        </div>
    </div>