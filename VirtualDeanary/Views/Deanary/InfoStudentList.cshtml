@model  VirtualDeanary.Models.InfoStudentListViewModel
@{
    ViewData["Title"] = "InfoStudentList";
}

<div class="container">

    <p><h4>Student list</h4></p>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Student</th>
                <th scope="col">Course</th>
                <th scope="col">Mark</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.StudentLists)
            {
                <tr>
                    <td>@item.User.Name @item.User.Lastname</td>
                    <td>@item.Course.CourseName</td>
                    <td class="text-success">@item.Mark</td>
                </tr>
            }
        </tbody>
    </table>
</div>

